@model UrunEditModel

@{
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-9">
        <div class="card shadow">
            <div class="card-header py-1 d-flex justify-content-between align-items-center">
                <h5 class="card-title">Ürün Güncelle</h5>
                <a href="urun.html" class="btn btn-sm btn-primary">
                    <i class="fa-solid fa-list"></i>
                </a>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" name="name" value="@Model.Id" />
                    <div class="row mb-3">
                        <label asp-for="UrunAdi" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="UrunAdi" class="form-control">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Aciklama" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <textarea asp-for="Aciklama" rows="3" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="fiyat" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="fiyat" class="form-control">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Aktif" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Aktif" class="form-check-input">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Anasayfa" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Anasayfa" class="form-check-input">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="KategoriId" class="col-sm-2 col-form-label">Kategori</label>
                        <div class="col-sm-10">
                            <select asp-for="KategoriId" class="form-select" asp-items="ViewBag.Kategoriler">
                                <option value="" selected>Seçiniz</option>

                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-2">

                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow">
            <div class="card-body">
                <img src="~/img/@Model.Resim" class="img-thumbnail" alt="">
                <input type="file" class="form-control mt-3">
            </div>
        </div>
    </div>
</div>