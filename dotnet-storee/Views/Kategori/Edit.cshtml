@model KategoriEditModels

@{
    Layout = "_AdminLayout";
}


<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header py-1 d-flex justify-content-between align-items-center">
                <h5 class="card-title">Kategori Güncelle</h5>
                <a href="kategori.html" class="btn btn-sm btn-primary">
                    <i class="fa-solid fa-list"></i>
                </a>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="row mb-3">
                        <label asp-for="KategoriAdi" class="col-sm-2 col-form-label">Kategori Adı</label>
                        <div class="col-sm-10">
                            <input asp-for="KategoriAdi" name="kategoriAdi" id="kategoriAdi" class="form-control">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Url" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Url" class="form-control">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>